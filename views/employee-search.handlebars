<ul class="sidenav sidenav-fixed">
    <form class="search employee-search">
        <div class="search-wrapper employee-search">
            <input type="text" id="employee_lang" placeholder="Search" name="search">
            <div class="search-results"></div>
            <div class="input-field col s4">
                <button class="btn btn-info">Search for Coders!</button>
            </div>
        </div>
    </form>

    <form class="search city-input">
        <div class="search-wrapper city-input">
            <input type="text" id="city-origin" placeholder="City">
            <div class="search-results"></div>
            <div class="input-field col s4">
                <button class="btn btn-info">Where are you located?</button>
            </div>
        </div>
    </form>

    <form action="#">
        <p class="range-field">
            Distance
            <input type="range" id="miles_away" min="0" max="500" />
        </p>
        <p class="range-field">
            Years of Experience
            <input type="range" id="years_of_experience" min="0" max="20" />
        </p>
        <p>
            <label>
                <input name="group1" type="radio" />
                <span>Yellow</span>
            </label>
        </p>
        <p>
            <label>
                <input class="with-gap" name="group1" type="radio" />
                <span>Green</span>
            </label>
        </p>
        <p>
            <label>
                <input name="group1" type="radio" disabled="disabled" />
                <span>Brown</span>
            </label>
        </p>
    </form>
</ul>


<div class="container">
    <div class="row">
        <div class="col s12">
            <h1 class="header">Employees</h1>
            <h3 class="header">Below are a list of Employees looking for work!</h3>
        </div>
    </div>
</div>

<div class="divider"></div>

<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12">
                <div class="section">
                    <div class="col s12">
                        <span class="title">Code Hunters</span>
                    </div>
                    {{#each employee}}
                    <div class="col s12 m6 l4">
                        <div class="card green darken-4 hoverable small white-text">
                            <div class="card-content white-text">
                                <span class="card-title">{{first_name}} {{last_name}}</span>
                                <div class="divider"></div>
                                <p>Years Experience: {{years_experience}}</p>
                                <div class="divider"></div>
                                <p>Languages Known: {{languages_known}}</p>
                                <div class="divider"></div>
                                <p>Desired Salary: {{salary_desired}}</p>
                                <div class="divider"></div>
                                <p>Email: {{employee_email}}</p>
                                <div class="divider"></div>
                                <p>Phone: {{employee_phone}}</p>
                                <div class="divider"></div>
                                <p class='city_name'>Location: {{city_name}}</p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>